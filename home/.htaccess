ErrorDocument 401 default
ErrorDocument 403 default
ErrorDocument 404 default

Order Deny,Allow
#Allow from all

Options All -Indexes +FollowSymLinks +ExecCGI
DirectoryIndex index.html index.php index.py

AddHandler cgi-script .py

<IfModule mod_headers.c>
  <FilesMatch ".(js|css|xml|gz|html|svg)$">
    Header append Vary: Accept-Encoding
  </FilesMatch>
</IfModule>

<FilesMatch "\.(ico|pdf|jpg|jpeg|png|gif|js|css)$">
  Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

# minute: max-age=60
# hour:   max-age=3600
# day:    max-age=86400
# week:   max-age=604800
# month:  max-age=2628000
# year:   max-age=31536000

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/x-javascript "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
#  ExpiresDefault "access plus 1 year"
</IfModule>

#<IfModule mod_headers.c>
#  Header set Strict-Transport-Security "max-age=10886400; includeSubDomains; preload"
#</IfModule>

<IfModule mod_security.c>
  SecRuleEngine Off
  SecRequestBodyAccess Off
</IfModule>

RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

SetEnvIf Request_URI ^/.well-known/acme-challenge BasicAuthExept1=1
SetEnvIf Request_URI ^/webdav BasicAuthExept2=1

AuthType Basic
AuthName "Restricted Content"
AuthBasicProvider file
AuthUserFile /home/galatqxu/mnt/data/Safe/Settings/.local/share/htpasswds/home/passwd
#AuthUserFile /home/galatqxu/mnt/data/Safe/Settings/.local/share/htpasswds/blog/wp-admin/passwd

Order Deny,Allow
Satisfy any
Deny from all
Require valid-user
Allow from env=BasicAuthExept1
Allow from env=BasicAuthExept2

